<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.weqar.weqar.Fragments.BotNav_EventsFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_homescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homescreen_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/home_filter"
                    android:backgroundTint="@color/colorHintss" />

                <EditText
                    android:id="@+id/homescreen_search"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/homescreen_filter"
                    android:background="@drawable/editext_lightborder_unsel"
                    android:backgroundTint="@color/colorHintss"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:gravity="start"
                    android:hint="Search"
                    android:padding="4dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorHints" />

                <ImageView
                    android:id="@+id/homescreen_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/homescreen_notification"
                    android:layout_marginStart="9dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/homescreen_search"
                    android:background="@drawable/ic_near_me_black_24dp"
                    android:backgroundTint="@color/colorHintss" />

                <ImageView
                    android:id="@+id/homescreen_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/homescreen_filter"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/home_toolbar_notification"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:id="@+id/IV_noitem_disc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/appbar_homescreen"

        android:background="@drawable/event_noitems_images"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"

        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/colorPrimaryDark"
        fab:menu_colorPressed="@color/colorPrimary"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="6dp"
        fab:menu_labels_paddingRight="10dp"
        fab:menu_labels_paddingBottom="6dp"
        fab:menu_labels_paddingLeft="10dp"
        fab:menu_labels_padding="10dp"
        fab:menu_labels_textColor="#09331b"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="6dp"
        fab:menu_labels_colorNormal="#ffffff"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="#d9000000"

        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rss_feed"
            fab:fab_size="mini"
            fab:menu_shadowYOffset="3dp"
            fab:menu_colorNormal="#13b167"
            fab:menu_colorPressed="#1caf68"
            fab:menu_colorRipple="#99FFFFFF"
            fab:fab_label="News"
            style="@style/MenuButtonsStyle" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_redeem"
            fab:fab_size="mini"
            fab:menu_colorNormal="#13b167"
            fab:menu_colorPressed="#1caf68"
            style="@style/MenuButtonsStyle"
            fab:fab_label="Event"
            fab:menu_labels_colorNormal="#ffffff"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_loyalty"
            fab:fab_size="mini"
            style="@style/MenuButtonsStyle"
            fab:fab_label="Discount" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card_travel"
            fab:fab_size="mini"
            style="@style/MenuButtonsStyle"

            fab:fab_label="Job" />


    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
